{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "app/api/admin/enhanced-sync/**/*.ts": {
      "memory": 2048,
      "maxDuration": 300
    },
    "app/api/admin/start-sync/**/*.ts": {
      "memory": 2048,
      "maxDuration": 300
    }
  },
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "BLS_API_KEY": {
      "required": true
    },
    "BLS_API_KEY_2": {
      "required": false
    },
    "BLS_API_KEY_3": {
      "required": false
    },
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "cache-control": "s-maxage=0"
      },
      "continue": true
    },
    { 
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "builds": [
    {
      "src": "next.config.mjs",
      "use": "@vercel/next"
    }
  ],
  "regions": ["iad1"],
  "cleanUrls": true,
  "public": false
}
